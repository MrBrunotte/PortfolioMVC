@model IEnumerable<PortfolioWebMVC.Models.ProjectsViewModel>

@{
    ViewData["Title"] = "Project List";
}
<h4>Search Result from "Description"</h4>
<hr />
<div class="mb-2">
    <a class="myBtnBack" asp-action="Index">Back to List</a>
</div>
<table class="table">
    <thead class="tHeader">
        <tr>
            <th class="thOne">
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th class="thTwo">
                @Html.DisplayNameFor(model => model.ProjectDescription)
            </th>
            <th class="thThree">
                @Html.DisplayNameFor(model => model.FrameworkToolsDescription)
            </th>
            <th class="thFour">
                @Html.DisplayNameFor(model => model.GitHubLink)
            </th>
            <th class="thFive">
                @Html.DisplayNameFor(model => model.DeployedLink)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FrameworkToolsDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GitHubLink)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeployedLink)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
